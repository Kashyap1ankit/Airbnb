<!-- For success  -->

<%if(success && success.length>0){%>
<div
  class="alert alert-success alert-dismissible fade show mt-2 col-12"
  role="alert"
>
  <%=success%><button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }%>

<!-- For error  -->

<%if(error && error.length>0){%>
<div
  class="alert alert-warning alert-dismissible fade show mt-2 col-12"
  role="alert"
>
  <%=error%><button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }%>
